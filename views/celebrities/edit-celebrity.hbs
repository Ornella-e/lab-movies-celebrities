<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit celebrity</h1>

            <hr>

            <form action="/celebrities/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Title</label>
                    <input required type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation" value="{{occupations}}">
                </div>

                <div class="mb-3">
                    <label for="catchPhrase" class="form-label">Catch Phrase</label>
                    <input type="text" class="form-control" id="catchPhrase" name="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit celebrity</button>
                <a href="/" class="btn btn-dark">Go back</a>
            </form>
            <hr>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Add new movie</h1>

            <hr>

            <form action="/movies/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input required type="text" class="form-control" id="title" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Gerne</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                 <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <input type="text" class="form-control" id="cast" name="cast" value="{{cast._id}}">
                    <select name="cast" id="cast" multiple>
                        <option value="{{cast._id}}"></option>
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Add movie</button>
                <a href="/" class="btn btn-dark">Go back</a>
            </form>
            <hr>
        </div>
    </div>
</div>